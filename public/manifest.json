{
	"manifest_version": 3,
	"name": "Bookmarks",
	"version": "1.0",
	"description": "A personal bookmarks manager with categories and search",
	"permissions": ["storage"],
	"action": {
		"default_popup": "index.html",
		"default_title": "Bookmarks"
	},
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": ["<all_urls>"]
}
